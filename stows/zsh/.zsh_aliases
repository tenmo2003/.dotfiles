# ls
alias l='ls -lh'
alias ll='ls -lah'
alias la='ls -A'
alias lm='ls -m'
alias lr='ls -R'
alias lg='ls -l --group-directories-first'

# git
alias gcl='git clone --depth 1'
alias gi='git init'
alias ga='git add'
alias gc='git commit -m'
alias gp='git push'
alias gs='git status'
alias gst='git stash'
alias gca='git commit --amend'
alias gcane='git commit --amend --no-edit'

alias grsh='git reset --hard'
alias grss='git reset --soft'
alias grs='git reset'

# cds
alias cd2='cd ../..'
alias cd3='cd ../../..'
alias cd4='cd ../../../../'

# custom
alias vi='nvim'
alias vim='nvim'

nvimconfig() {
  pushd "$DOTFILES/stows/nvim/.config/nvim" > /dev/null || return
  nvim .
  popd > /dev/null || return
}

zshconfig() {
    pushd "$DOTFILES"
    nvim stows/zsh/.zshrc
    popd
}

dotfilesconfig() {
    pushd "$DOTFILES"
    nvim .
    popd
}

gotolazy() {
    pushd ~/.local/share/nvim/lazy
}
